/* pages/locationEdit/locationEdit.wxss */

.content {
  margin: 20rpx;
  margin-top: 50rpx;
}

.cityContent {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.city {
  height: 70rpx;
  font-size: 30rpx;
  line-height: 70rpx;
  margin-left: 0rpx;
  margin-right: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.area {
  height: 70rpx;
  font-size: 30rpx;
  line-height: 70rpx;
  margin-left: 10rpx;
  margin-right: 0rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.detail {
  height: 70rpx;
  font-size: 30rpx;
  line-height: 70rpx;
  margin-left: 10rpx;
  margin-right: 0rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.location {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

input {
  height: 60rpx;
  padding: 10rpx;
  width: 73%;
  border-bottom: 0.5px solid rgb(197, 197, 197);
}

.save {
  width: 20%;
  height: 60rpx;
  line-height: 60rpx;
  background: rgb(255, 193, 7);
  border-radius: 45rpx;
  color: white;
  margin-left: 0rpx;
  margin-right: 0rpx;
  font-size: 30rpx;
}
.save::after {
  border: none;
}