/* pages/goodsClassify/goodsClassify.wxss */

.inputGroup {
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
  align-items: baseline;
  margin-left: 35rpx;
  margin-right: 35rpx;
}

input {
  width: 100%;
  margin-right: 40rpx;
  padding-bottom: 15rpx;
  border-bottom: 1px solid rgb(197, 197, 197);
}

button {
  margin-right: 0rpx;
  height: 65rpx;
  width: 160rpx;
  font-size: 30rpx;
  padding-left: 35rpx;
  padding-right: 35rpx;
  background: rgb(175, 175, 175);
  color: rgb(255, 255, 255);
  line-height: 65rpx;
}

.classifyView {
  display: flex;
  flex-flow: row wrap;
}

.classifyView text {
  flex: 0 0 auto;
  padding-left: 15rpx;
  padding-right: 15rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin-left: 35rpx;
  margin-right: 35rpx;
  margin-top: 8%;
  border-radius: 7rpx;
  background: rgb(219, 217, 217);
  font-size: 30rpx;
}