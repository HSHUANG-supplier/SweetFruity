/* pages/goodsClassify/goodsClassify.wxss */

.container {
  margin-left: 35rpx;
  margin-right: 35rpx;
}

.inputGroup {
  display: flex;
  flex-direction: row;
  margin-top: 50rpx;
  align-items: baseline;
}

input {
  width: 100%;
  margin-right: 40rpx;
  padding-bottom: 15rpx;
  border-bottom: 1px solid rgb(197, 197, 197);
}

button {
  margin-right: 0rpx;
  height: 65rpx;
  width: 160rpx;
  font-size: 30rpx;
  padding-left: 35rpx;
  padding-right: 35rpx;
  background: rgb(175, 175, 175);
  color: rgb(255, 255, 255);
  line-height: 65rpx;
}

.classifytext {
  width: 100%;
  height: 60rpx;
  color: white;
  padding: 10rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 8rpx;
  margin-top: 60rpx;
  background: rgb(70, 70, 70);
}
